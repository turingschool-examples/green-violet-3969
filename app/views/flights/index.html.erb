<h1> FLIGHT INFORMATION </h1>

<% @flights.each do |flight| %>
  <li> Flight Number: <%= flight.number %> Airline: <%= flight.airline.name %></li>
  <ul>
    <% flight.passengers.each do |passenger| %>
      <li>
        <div id="flight-<%= flight.id %>">
          Passenger: <%= passenger.name %>
          <%= link_to "Remove #{passenger.name}", flight_passenger_path(flight, passenger), method: :delete %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>